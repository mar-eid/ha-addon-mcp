ARG BUILD_FROM
FROM $BUILD_FROM

# Install only Python3 - nothing else
RUN apk add --no-cache python3

# Create app directory
WORKDIR /app

# Copy application files
COPY server-minimal.py ./server.py
COPY run.sh ./
RUN chmod +x run.sh

# Simple health check using wget (available in base image)
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD wget --quiet --tries=1 --spider http://localhost:8099/health || exit 1

# Run the application
CMD ["./run.sh"]